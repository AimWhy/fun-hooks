{
  "name": "fun-hooks",
  "version": "0.8.1",
  "description": "A generalized and simple hooking API for adding extensibility to applications",
  "keywords": [
    "hooks",
    "middleware",
    "before",
    "after",
    "pre",
    "post",
    "wrapper",
    "plugins"
  ],
  "main": "index.js",
  "files": [
    "index.js",
    "dist/fun-hooks.js",
    "dist/fun-hooks.min.js",
    "dist/fun-hooks.min.js.map"
  ],
  "unpkg": "dist/fun-hooks.min.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | env-cmd coveralls",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand .",
    "lint": "eslint *.js",
    "prettier": "prettier --write \"{*.js,json,md}\" --end-of-line lf",
    "bundle": "node scripts/bundle.js",
    "validate": "npm run lint && npm run test",
    "prepare": "npm run validate && npm run bundle",
    "publish": "npm run test:coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snapwich/fun-hooks"
  },
  "author": "Rich Snapp @snapwich",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^3.0.3",
    "env-cmd": "^9.0.1",
    "eslint": "^5.10.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^23.6.0",
    "mkdirp": "^0.5.1",
    "prettier": "^1.16.4",
    "terser": "^3.16.1"
  }
}
